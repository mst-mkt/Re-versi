datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  id        String   @id
  name      String
  board     Json
  turnColor String
  status    String
  players   Player[]
  createdAt DateTime
}

model Player {
  id        String
  room      Room      @relation(fields: [roomId], references: [id])
  roomId    String
  inTime    DateTime
  outTime   DateTime?
  createdAt DateTime

  @@id([id, roomId])
}
